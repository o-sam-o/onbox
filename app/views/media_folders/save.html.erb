<div style="width: 600px;">
<% form_for @media_folder, :html => { :class => 'defaultForm' } do |f| %>
  <fieldset>
      <legend>Media Folder:</legend>
	  <div class="defaultFormField">
	    <%= f.label :location %>
	    <%= f.text_field :location, :class => "defaultFormTextField" %>
		<%= error_message_on @media_folder, :location, :css_class => "defaultFormError" %>
	  </div>
	  <div class="defaultFormField">
	    <%= f.label :scan %>
	    <%= f.check_box :scan %>
		<%= error_message_on @media_folder, :scan, :css_class => "defaultFormError" %>
	  </div>
  </fieldset>
  <% if not @media_folder.errors.empty? %>
		<div class="defaultFormErrorOverview">
  		 Save failed, please see errors above.
		</div>
  <% end %>
  <div class="defaultFormButtons">
	<%= yui_submit_button "Save" %>
  </div>
<% end %>
</div>
